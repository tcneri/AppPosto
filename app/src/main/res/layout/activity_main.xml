<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="@string/informe_preco"
        android:textColor="@color/Primary"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="63dp" />

    <ImageView
        android:id="@+id/imgGasolina"
        android:layout_width="379dp"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:background="#008000"
        app:srcCompat="@drawable/gasolina"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="91dp" />

    <EditText
        android:id="@+id/edtprecoG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textColor="#000000"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="157dp" />

    <ImageView
        android:id="@+id/imgEtanol"
        android:layout_width="379dp"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:background="#FF0000"
        app:srcCompat="@drawable/etanol"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="239dp" />

    <EditText
        android:id="@+id/edtprecoE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textColor="#000000"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="194dp" />

    <Button
        android:id="@+id/btn_comp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bt_comparar"
        android:textColor="#000000"
        android:textStyle="bold"
        android:background="@color/Primary"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="306dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resultado_bt"
        android:layout_marginLeft="15dp"
        android:textSize="18sp"
        android:textColor="#F9C830"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="375dp" />

    <ImageView
        android:id="@+id/img_result"
        android:layout_width="285dp"
        android:layout_height="132dp"
        android:layout_marginLeft="15dp"
        />


</LinearLayout>